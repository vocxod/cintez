    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language" style="padding-top:0px;">
    <ul class="nav navbar-nav navbar-right langnavbar-nav" style="background:none;">
    <li class="dropdown" style="background:rgb(0, 150, 69);">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="background:rgb(0, 150, 69); padding:0px; margin:0px;">

        {% for language in languages %}
          {% if language.code == code %} 
          <img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}" style="margin-top:6px;">
          {% endif %}
        {% endfor %}

      <span style="color:#FEFAEA;background:rgb(0, 150, 69);margin-top:6px;" class="caret"></span></a>
      <ul id="langdropdown" class="dropdown-menu" role="menu" style="background:rgb(0, 150, 69);">
