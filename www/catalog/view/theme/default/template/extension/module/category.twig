
<h4 style="line-height:1.5em;">&nbsp;</h4>

<div class="list-group">
  
  {% for category in categories %}

    {% if category.category_id == category_id %} 
        
        <a href="{{ category.href }}" class="list-group-item active plinkleft ">{{ category.name }}</a> 
    
        {% if category.children %}
            {% for child in category.children %}
                {% if child.category_id == child_id %}
                <a  href="{{ child.href }}" class="list-group-item active plinkleft">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a> 
                {% else %} 
                <a href="{{ child.href }}" class="list-group-item plinkleft">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a>
                {% endif %}
            {% endfor %}
        {% endif %}

    {% else %} 
        <a href="{{ category.href }}" class="list-group-item plinkleft">{{ category.name }}</a>
    {% endif %}

  {% endfor %}

</div>

