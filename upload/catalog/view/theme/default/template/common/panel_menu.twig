<div class="container-1">
  <div class="row-1">
    <div class="col-lg-12">
      {% for item in categories %}

        {% if loop.index == 1 or loop.index == 6 %}
            <div class="row">
        {% endif %}

{% if loop.index < 11 %}
<div data="{{ item.category_id }}" id="panel_outer_{{ item.category_id }}" class="col-md-1-5 panel-menu-item" onclick="location={{ item.href }}">
<div id="menu_{{ item.category_id }}" class="panel_menu" >
</div>
<a id="panel_link_{{ item.category_id }}" href="{{ item.href }}">{{ item.name }}</a>
</div>
{% endif %}

        {% if loop.index % 5 == 0 %}
            </div>
        {% endif %}

      {% endfor %}
      </div>
  </div>

{# страница из БД с ИД=11 как главная - замещаем кодированием  
  <div class="row" id="information">   
    {{ information_description | raw }}
  </div>
#}

