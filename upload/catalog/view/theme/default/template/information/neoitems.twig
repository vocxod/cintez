{{ header }}

<div id="information-newslist" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>

  <div class="row">
    <div class="col-sm-12 ">
      
      <div class="col-sm-4 img-anonce ">
          <h3 class="h2"><span class="green-uline">{{ heading_title }}</span></h3>
      </div>
      <div class="col-sm-4"></div>
      <div class="col-sm-4 img-anonce ">
          {# <h3 class="h2"><span class="green-uline">{{ heading_title_pub }}</span></h3> #}
      </div>
    </div>
  </div>
  {# variant 2 #}
  {% for y in 0..4 %}  
    <div class="row">
      <div class="col-sm-12 ">
      {% for x in 0..1 %}
      {#% for item in top_news %#}         
          <div class="col-sm-6">
            {% set yndex = y * 2 + x %}
            {% set item = top_news[yndex] %}
              <div class="row news-anonce" style="height:182px; overflow: hidden; background:rgb(240,244,245); margin-bottom:5px; ">
                <div class="col-sm-6 img-anonce ">
                  {% if item.foreground_image|length > 1 %}
                    <img src="{{ item.foreground_image }}" alt="SpecSyntez News Article" />
                  {% else %}
                    <img src="/image/catalog/logo-325x325.png" alt="SpecSyntez News Article" />
                  {% endif %}
                </div>  
                <div class="col-sm-6  ">
                  {#<h4 style="font-weight:bold;">{{ item.title }}</h4>#}
                  <p class="anonce-description">
                    {{ item.foreground_text }}
                  </p>
                  <div class="col-sm-12" style="margin-left: 0;padding-left: 0;">
                        <div class="col-sm-6 anonce-buttons" style="padding-left: 0;line-height: 2em;">
<script type="text/javascript" src="https://vk.com/js/api/share.js?95" charset="windows-1251"></script>
<!-- Put this script tag to the place, where the Share button will be -->
<script type="text/javascript"><!--
document.write(VK.Share.button(false,{type: "link_noicon", text: "<i class='fa fa-vk' style='font-size:16px; color:#222;'></i>"}));
--></script>
                          <a href="#">
                            <i class="fa fa-twitter"></i>
                          </a>
                          <a href="#">
                            <i class="fa fa-facebook"></i>
                          </a>    
                        </div>
                        <div class="col-sm-6" style="padding:0;">
                          <a class="btn btn-success shownews" href="index.php?route=information/onenews&information_id={{item.information_id}}"
                          style="color:#FEFEFE;margin-left:34px;">
                          ПОДРОБНЕЕ&nbsp;
                          <i class="fa fa-angle-right" aria-hidden="true"></i>
                          </a>
                        </div>
                  </div>
                </div>
              </div>

          </div>
      {% endfor %}
      </div>
    </div>
  {% endfor %}



